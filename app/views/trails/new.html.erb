
<div class = "container">
  <div class="row">
    <h1>New Trail</h1>
      <div style="width: 30%; margin: 25px auto;">

        <%= form_for([@user, @trail]) do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :image_path %>
          <%= f.text_field :image_path %>
        </div>

        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>

        <div class="form-group">
          <%= f.label :state %>
          <%= f.text_field :state %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>

        <div class="form-group">
          <%= f.label "Tags" %>
          <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |c| %>
              <div class="checkbox">
                    <%= c.check_box %>
                    <%= c.label %>
              </div>
            <% end %>
          </div>

          <%= f.label :tags %>
          <%= f.select :tags, options_for_select(Tag.all), {}, {:multiple => true, :class => "chzn-select", :style => "width:450px;"} %>
        </div>


        <div class="form-group">
          <%= f.submit %>
        </div>
      <% end %>

    </div>
  </div>
</div>
