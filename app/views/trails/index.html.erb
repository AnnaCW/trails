<div class="container-home">

    <header class="jumbotron">
        <div class="container">
            <h1 id="site_title">Trail Hub</h1>

            <% if current_user %>
              <p>
                  <a class="btn btn-default"><%= link_to "New Trail", new_user_trail_path(current_user)%></a>
              </p>
            <% end %>

        </div>
    </header>

<div class= "container">
    <div class="row text-center" style="display:flex; flex-wrap; wrap;">
        <% @trails.each do |trail| %>
            <div class= "col-md-3 col sm-6">
                <div class="thumbnail">
                    <%= image_tag trail.image_path %>
                    <div class="caption">
                    <h4> <%= trail.name %> </h4>
                    </div>
                </div>
                <p>
                    <a class="btn btn-default"><%= link_to trail.name, trail_path(trail)%></a>
                </p>
            </div>
          <% end %>

    </div>
</div>

</div>
