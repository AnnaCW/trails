<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1 id="site_title">EpicTrails</h1>
            <p>
            <% if current_user %>
                  <a class="btn btn-primary btn-large" href="<%=new_user_trail_path(current_user)%>">Add New Trail</a>
            <% end %>
          </p>
    </div>
  </header>

    <div class="row text-center">
        <% @trails.each do |trail| %>
            <div class= "col-md-3 col sm-6">
                <div class="thumbnail">
                  <img src="<%= trail.image_path %>">
                    <div class="caption">
                      <h4> <%= link_to trail.name, trail_path(trail) %> </h4>
                      <h5> <%= trail.city %>, <%= trail.state %> </h5>
                    </div>
                </div>
            </div>
          <% end %>
    </div>


</div>
