<div class="container">

<%= form_for(@trail) do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :image_path %>
  <%= f.text_field :image_path %>
</div>

<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

<div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>


  <div class="form-group">
    <%= f.label "Tags" %>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |c| %>
        <div class="checkbox">
              <%= c.check_box %>
              <%= c.label %>
        </div>
      <% end %>
    </div>

  <div class="form-group">
      <%= f.submit "Update Trail", class: "btn btn-success" %>
  </div>

<% end %>

</div>
