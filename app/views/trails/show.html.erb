<div class="container">

  <div class="row text-center" style="display:flex; flex-wrap; wrap;">
    <h1><%= @trail.name %></h1>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap; wrap;">
    <div class= "col-2-3">
      <%= image_tag @trail.image_path %>
    </div>
    <div class= "col-2-3 description">
      <h4>Description</h4>
    </div>
  </div>

<% if current_user == @trail.user %>
  <%= link_to "Edit", edit_trail_path(@trail) %>
  <%= link_to "Delete", trail_path(@trail), method: :delete %>
<% end %>

</div>
